@model IEnumerable<AppChatMVC.ViewModels.Friend.FriendListItemVM>
<!-- Modal -->
<div class="modal fade" id="AddFriendModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Tìm bạn</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="my-3">
                    <div class="input-group">
                        <input type="text" class="form-control rounded-5" x-ref="inputSearch" placeholder="Tìm kiếm">
                        <button class="btn" id="findbtn" x-on:click="findFriend()">Tìm</button>
                    </div>
                </div>

                <div class="my-3">
                    <ul class="list-unstyled mb-0">
                        <template x-for="f in _searchFriend">
                            <li class="p-2 border-bottom d-flex" style="background-color: #eee; justify-content: space-between">
                                <div class="d-flex">
                                    <img :src="f.avatar" alt="avatar"
                                         class="rounded-circle d-flex align-self-center me-3 shadow" width="60" , height="60" />

                                    <div class="pt-1">
                                        <p class="fw-bold mb-0" x-text="f.username"></p>
                                        <p class="small text-muted" x-text="f.displayName"></p>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center" style="flex-direction: column;">
                                    <button class="btn" x-on:click="addFriendRequest(f.id)"><i class="bi bi-plus-circle-dotted"></i> Add</button>
                                </div>
                            </li>
                        </template>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>